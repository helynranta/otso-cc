doctype html
html(lang="en")
    head
        title=feedback
        
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet")
        link(href="/bootstrap/css/bootstrap.min.css" rel="stylesheet")
        link(href="/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet")
        link(href="/src/star-rating.min.css" rel="stylesheet")
    body
        .container-fluid
            .row.text-center
                h1 Feedback form
                p Your feedback is valueable for us. Please fill this form
            .row.text-center
                
            .row.text-center
                input(placeholder="E-mail" id="email")

            .row.text-center
                input(placeholder="Additional words" id="comment")

        .container-fluid

            .row.text-center
                h2 Overall...
                input(
                    class="rating"
                    id="overall"
                    data-step="1"

                )
                h2 Tidiness

                input(
                    id="tidiness"
                    class="rating"
                    data-step="1"

                )
                h2 Service
                input(
                    id="service"
                    class="rating"
                    data-step="1"

                )

                h2 Time....
                input(
                    id="time"
                    class="rating"
                    data-step="1"
                )
                h2 Do you want to be contacted? 
                btn-group(
                    data-toggle="buttons"
                    id="recall"
                )

                    label.btn.btn-default yes
                        input(
                            type="radio"
                            id="yes"
                            value="yes"
                        )
                    label.btn.btn-default no
                        input(
                            type="radio"
                            id="no"
                            value="no"
                        )
            .row.text-center
                br

                button.btn.btn-primary(
                    id="submitBtn"
                    type="submit"
                    value="yes"

                ) Submit



            

                
        script(src="https://code.jquery.com/jquery-2.1.4.min.js")
        script(src="/bootstrap/js/bootstrap.min.js")
        script(src="/src/star-rating.min.js")
        script(src="/src/feedback.js")
